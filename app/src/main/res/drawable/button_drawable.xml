<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    //Apparence lorsque l'on appuie sur le bouton
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="@color/btn_bc" />
            <gradient android:startColor="#D1FF02"
                android:endColor="#61B2C7"
                android:gradientRadius="80dp"
                android:type="radial"
                />
        </shape>
    </item>
    //Apparence lors du focus du bouton
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#5E7974" />
            <gradient android:startColor="#D1FF02"
                android:endColor="#61B2C7"
                android:gradientRadius="80dp"
                android:type="radial"
                />
        </shape>
    </item>
    //Apparence normal du bouton
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#5E7974" />
            <gradient android:startColor="#61B2C7"
                android:endColor="#D1FF02"
                android:type="linear"
                />
        </shape>
    </item>
</selector>